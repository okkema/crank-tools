    "dexie": "^3.2.0",
    "dexie-react-hooks": "^1.1.1",
    "formik": "^2.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "react-router-dom": "^6.2.1",
    "remark-gfm": "^3.0.1",
    "uuid": "^8.3.2",
    "vite-plugin-markdown": "^2.0.2",
    "vite-plugin-virtual-plain-text": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@vitejs/plugin-react": "^1.0.7",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okkema/crank.tools"
  },
  "bugs": {
    "url": "https://github.com/okkema/crank.tools/issues"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "npm run lint:fix"
    ]
  }
}
