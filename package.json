  "scripts": {
    "build": "npm-run-all build:typescript build:vite",
    "build:typescript": "tsc",
    "build:vite": "vite build",
    "clean": "rm -rf dist node_modules/.vite",
    "deploy:pages": "npm-run-all build test:verbose",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,json}'",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx,json}' --fix",
    "lint:staged": "lint-staged",
    "precommit": "npm-run-all clean lint:staged build test",
    "preview": "vite preview",
    "prepare": "husky install",
    "start": "vite",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@faker-js/faker": "^6.0.0-alpha.6",
